<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.humanorcharacterquiz.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginEnd="@dimen/large_distance"
            android:layout_marginStart="@dimen/large_distance"
            android:layout_marginTop="@dimen/small_distance"
            android:gravity="center"
            android:text="@string/quiz_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/human_or_character" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/small_distance">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_distance"
                android:text="@string/quiz_description"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_distance"
                android:text="@string/name_question"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_given"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint"
                android:inputType="textCapSentences"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/large_distance"
                android:text="@string/question_one"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/one_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_1" />

                <RadioButton
                    android:id="@+id/one_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_2" />

                <RadioButton
                    android:id="@+id/one_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_two"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/two_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_1" />

                <RadioButton
                    android:id="@+id/two_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_2" />

                <RadioButton
                    android:id="@+id/two_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_three"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/three_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/three_1" />

                <RadioButton
                    android:id="@+id/three_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/three_2" />

                <RadioButton
                    android:id="@+id/three_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/three_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_four"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/four_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/four_1" />

                <RadioButton
                    android:id="@+id/four_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/four_2" />

                <RadioButton
                    android:id="@+id/four_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/four_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_five"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/five_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/five_1" />

                <RadioButton
                    android:id="@+id/five_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/five_2" />

                <RadioButton
                    android:id="@+id/five_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/five_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_six"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/six_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/six_1" />

                <RadioButton
                    android:id="@+id/six_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/six_2" />

                <RadioButton
                    android:id="@+id/six_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/six_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_seven"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/seven_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seven_1" />

                <RadioButton
                    android:id="@+id/seven_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seven_2" />

                <RadioButton
                    android:id="@+id/seven_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/seven_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_eight"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/eight_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eight_1" />

                <RadioButton
                    android:id="@+id/eight_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eight_2" />

                <RadioButton
                    android:id="@+id/eight_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eight_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_nine"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/nine_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_1" />

                <RadioButton
                    android:id="@+id/nine_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_2" />

                <RadioButton
                    android:id="@+id/nine_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_ten"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ten_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_1" />

                <RadioButton
                    android:id="@+id/ten_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_2" />

                <RadioButton
                    android:id="@+id/ten_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_3" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/large_distance"
                android:layout_marginTop="@dimen/large_distance"
                android:onClick="showResults"
                android:padding="@dimen/small_distance"
                android:text="@string/results" />

            <LinearLayout
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/large_distance">

                    <ImageView
                        android:id="@+id/image_result"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:adjustViewBounds="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/small_distance">

                        <TextView
                            android:id="@+id/human_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/red" />

                        <TextView
                            android:id="@+id/quiz_results_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quiz_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_distance"
                    android:paddingLeft="@dimen/tiny_distance"
                    android:text="@string/email" />

                <Button
                    android:id="@+id/quit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/tiny_distance"
                    android:onClick="quit"
                    android:padding="@dimen/small_distance"
                    android:text="@string/quit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>





