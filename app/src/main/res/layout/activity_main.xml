                    android:text="@string/eight_2" />

                <RadioButton
                    android:id="@+id/eight_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eight_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_nine"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/nine_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_1" />

                <RadioButton
                    android:id="@+id/nine_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_2" />

                <RadioButton
                    android:id="@+id/nine_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nine_3" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_distance"
                android:layout_marginTop="@dimen/small_distance"
                android:text="@string/question_ten"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ten_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_1" />

                <RadioButton
                    android:id="@+id/ten_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_2" />

                <RadioButton
                    android:id="@+id/ten_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_3" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/large_distance"
                android:onClick="showResults"
                android:text="@string/results" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/small_distance">

                <ImageView
                    android:id="@+id/image_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/small_distance">

                    <TextView
                        android:id="@+id/human_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#B71C1C" />

                    <TextView
                        android:id="@+id/quiz_results_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quiz_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>





